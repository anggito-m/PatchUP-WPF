<Page x:Class="WpfApp1.Community"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      xmlns:Component="clr-namespace:WpfApp1.Component"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1200"
      Title="Community">

    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Component:Sidebar x:Name="sidebar"/>

        <Grid Grid.Column="1" Margin="20">
            <StackPanel>
                <Component:SearchBar />

                <Border Background="White" Width="900" Padding="20" Margin="5,20,5,0" CornerRadius="15" BorderBrush="#D6E0EF" BorderThickness="3">
                    <StackPanel Background="#FFFFFF" Width="850">
                        <TextBlock Text="Create Post" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" />

                        <Border Background="#E9E9EF" CornerRadius="15" Padding="10" Margin="0,0,0,15">
                            <TextBox Text="Write something..." Background="Transparent" BorderThickness="0" FontSize="14" Foreground="#999" FontStyle="Italic"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                                <Button Width="100" Margin="0,0,10,0" Background="#D1D2F4" BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="5">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Image Source="/icon/image.png" Width="20" Margin="0,0,5,0"/>
                                                    <TextBlock Text="Image" FontSize="14" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Width="100" Background="#D1D2F4" BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="5">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Image Source="/icon/video.png" Width="20" Margin="0,0,5,0"/>
                                                    <TextBlock Text="Video" FontSize="14" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <Button Content="Post" Width="80" Background="#00029F" Foreground="White" FontWeight="SemiBold" Grid.Column="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Height="600" PanningMode="VerticalOnly">
                    <StackPanel>
                        <Border Background="White" Width="900" Padding="20" Margin="5,20,5,0" CornerRadius="15" BorderBrush="#D6E0EF" BorderThickness="3">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Image Source="/icon/profile.png" Width="40" Height="40" Margin="0,0,10,0">
                                        <Image.Clip>
                                            <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                                        </Image.Clip>
                                    </Image>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Account Name" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="10 days ago" Foreground="#999" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <Border Background="#E0E0E0" Height="250" CornerRadius="10" Margin="0,0,0,10">
                                    <TextBlock Text="Image/Video Preview" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666" FontSize="14"/>
                                </Border>

                                <TextBlock Text="This is the post description. It can be anything. This description can be very long, or very short. This is the second line of this post description. Only the first two line is visible in the preview." 
                           FontSize="14" Foreground="#444" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                <TextBlock Text="Read More" Foreground="#2D2BC8" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0, 0, 20, 0">
                                        <Image Source="/icon/like.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="167 Likes" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0, 0, 20, 0">
                                        <Image Source="/icon/comment.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="6 Comments" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/icon/share.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="2 Shares" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="White" Width="900" Padding="20" Margin="5,20,5,0" CornerRadius="15" BorderBrush="#D6E0EF" BorderThickness="3">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Image Source="/icon/profile.png" Width="40" Height="40" Margin="0,0,10,0">
                                        <Image.Clip>
                                            <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                                        </Image.Clip>
                                    </Image>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Account Name" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="10 days ago" Foreground="#999" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Background="#E0E0E0" Height="250" CornerRadius="10" Margin="0,0,0,10">
                                    <TextBlock Text="Image/Video Preview" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666" FontSize="14"/>
                                </Border>

                                <TextBlock Text="This is the post description. It can be anything. This description can be very long, or very short. This is the second line of this post description. Only the first two line is visible in the preview." 
   FontSize="14" Foreground="#444" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                <TextBlock Text="Read More" Foreground="#2D2BC8" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0, 0, 20, 0">
                                        <Image Source="/icon/like.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="167 Likes" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0, 0, 20, 0">
                                        <Image Source="/icon/comment.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="6 Comments" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/icon/share.png" Width="18" Height="18" Margin="0,0,5,0"/>
                                        <TextBlock Text="2 Shares" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
