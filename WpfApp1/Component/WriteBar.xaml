<UserControl x:Class="WpfApp1.Component.WriteBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Component"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="760">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Border Background="White" Width="750" Height="50" CornerRadius="10" BorderBrush="#D6D6D6" BorderThickness="1" Padding="10">
            <Grid>
                <TextBox x:Name="WriteTextBox"
                     Width="700"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#A3A3A3"
                     FontSize="14"
                     Text="Write something..."
                     VerticalAlignment="Center"
                     GotFocus="WriteTextBox_GotFocus"
                     LostFocus="WriteTextBox_LostFocus"
                     TextChanged="WriteTextBox_TextChanged"/>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
