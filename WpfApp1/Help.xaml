<Page x:Class="WpfApp1.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      xmlns:Component="clr-namespace:WpfApp1.Component"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Help">

    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Component:Sidebar x:Name="sidebar"/>

        <Grid Grid.Column="1" Margin="20">
            <StackPanel>
                <Component:SearchBar />

                <StackPanel Width="910">
                    <TextBlock Text="Frequently Asked Questions" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0, 20, 0, 30"
                     />
                    <Expander Header="What is UX design?" 
                       Background="#F9F6F2" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Padding="10"
                       Margin="0, 0, 0, 10"
                       HorizontalContentAlignment="Stretch">
                        <StackPanel Background="#F9F6F2" Margin="25, 0, 0, 0">
                            <TextBlock Text="UX design stands for User Experience design. It is the process of designing digital or physical products that are easy to use, intuitive, and enjoyable for the user."
                               FontSize="14" 
                               FontWeight="Normal" 
                               Foreground="#444444"
                               TextWrapping="Wrap"
                             />
                         </StackPanel>
                    </Expander>
                    <Expander Header="What are the key principles of UX design?" 
                       Background="#F9F6F2" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Padding="10"
                       Margin="0, 0, 0, 10"
                       HorizontalContentAlignment="Stretch">
                        <StackPanel Background="#F9F6F2" Margin="25, 0, 0, 0">
                            <TextBlock Text="Some key principles of UX design include usability, accessibility, and consistency."
                                FontSize="14" 
                                FontWeight="Normal" 
                                Foreground="#444444"
                                TextWrapping="Wrap"
                            />
                        </StackPanel>
                    </Expander>
                    <Expander Header="What is the difference between UX and UI design?" 
                       Background="#F9F6F2" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Padding="10"
                       Margin="0, 0, 0, 10"
                       HorizontalContentAlignment="Stretch">
                        <StackPanel Background="#F9F6F2" Margin="25, 0, 0, 0">
                            <TextBlock Text="UX design focuses on the overall experience of the user, while UI design focuses on the look and feel of the product."
                                FontSize="14" 
                                FontWeight="Normal" 
                                Foreground="#444444"
                                TextWrapping="Wrap"
                             />
                        </StackPanel>
                    </Expander>
                    <Expander Header="What is a wireframe?" 
                       Background="#F9F6F2" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Padding="10"
                       Margin="0, 0, 0, 10"
                       HorizontalContentAlignment="Stretch">
                        <StackPanel Background="#F9F6F2" Margin="25, 0, 0, 0">
                            <TextBlock Text="A wireframe is a visual guide that represents the skeletal framework of a website or application."
                                FontSize="14" 
                                FontWeight="Normal" 
                                Foreground="#444444"
                                TextWrapping="Wrap"
                            />
                        </StackPanel>
                    </Expander>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
