<Window x:Class="WpfApp1.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <!-- Main Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#002E84" CornerRadius="0,30,30,0" ClipToBounds="True">
            <StackPanel Background="#002E84" Grid.Column="0">
                <!-- Logo Section -->
                <Button Background="Transparent" BorderBrush="Transparent" Margin="0, 10, 0, 10" Foreground="White" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="PatchUP" VerticalAlignment="Center" FontSize="14" FontFamily="Mulish"/>
                    </StackPanel>
                </Button>

                <Separator Background="White" Margin="10,0" Height="2"/>

                <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 0">
                    <Ellipse Width="50" Height="50" Margin="0,10,10,10">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/icon/profile.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Robert Fox" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="View Profile" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Menu Items with Icons -->
                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/home.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Home" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/saved_post.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Saved Post" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/tutorial.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Tutorial" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/community.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Community" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/chatbot.png" Width="20" Height="20" Margin="0, 0, 10, 0" />
                        <TextBlock Text="Chatbot" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Source="/icon/playlist.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Playlist" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Separator Background="White" Margin="10,5" Height="2"/>

                <!-- General Section -->
                <StackPanel VerticalAlignment="Bottom">
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Source="/icon/settings.png" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Source="/icon/help.png" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Help" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0, 10, 0, 0">
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="10,5" Foreground="White" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Source="/icon/logout.png" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Logout" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Welcome Section -->
            <StackPanel Margin="0,10,0,0">
                <Border Width="575" Height="100" Background="#4143E3" CornerRadius="30">
                    
                </Border>
                <Grid Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Cards -->
                    <Border Grid.Column="0" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/light.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Tutorial" FontSize="18" FontWeight="Bold" Foreground="#F1C40F"/>
                            <TextBlock Text="Simplify your decisions through our Smart Menu Assistant who will help you." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/book.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Community" FontSize="18" FontWeight="Bold" Foreground="#2ECC71"/>
                            <TextBlock Text="Connect with others and share experiences through our community." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/chatbot_menu.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Chatbot" FontSize="18" FontWeight="Bold" Foreground="#3498DB"/>
                            <TextBlock Text="If you already know what to order, this is the best choice." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
