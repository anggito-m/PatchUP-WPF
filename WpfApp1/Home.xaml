<Window x:Class="WpfApp1.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Home" Height="800" Width="1200">
    <Grid>
        <!-- Main Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#00029F" Width="250" CornerRadius="0,40,40,0">
            <DockPanel LastChildFill="True">
                <!-- Main Menu Content -->
                <StackPanel DockPanel.Dock="Top" Margin="10">
                    <!-- Tulisan PatchUP -->
                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0, 10, 0, 15">
                        <Run Text="Patch"/>
                        <Run Text="UP" Foreground="#00EDFA"/>
                    </TextBlock>

                    <Separator Background="Gray"/>

                    <!-- Profile Section -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,10" HorizontalAlignment="Left">
                        <Ellipse Width="60" Height="60" Fill="Gray" Margin="10,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Robert Fox" Foreground="White" FontWeight="Bold" Margin="0, 0, 0, 5"/>
                            <TextBlock Text="View Profile" Foreground="White" FontSize="12"/>
                            <Border BorderBrush="White" BorderThickness="0,0,0,0.5" Width="Auto"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Menu Section -->
                    <TextBlock Text="MENU" Foreground="#EAEAEF" Margin="10,10,0,5" Opacity="0.85"/>
                    <StackPanel>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Home" Tag="/icon/home.png"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Saved Post" Tag="/icon/saved_post.png"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Tutorial" Tag="/icon/tutorial.png"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Community" Tag="/icon/community.png"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Chatbot" Tag="/icon/chatbot_menu.png"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Playlist" Tag="/icon/playlist.png"/>
                    </StackPanel>

                    <Separator Margin="0,20,0,30" Background="Gray"/>
                    <TextBlock Text="GENERAL" Foreground="#EAEAEF" Margin="10,0,0,5" Opacity="0.85" FontWeight="SemiBold"/>

                    <StackPanel>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Settings" Tag="SettingsIcon"/>
                        <Button Style="{StaticResource SidebarButtonStyle}" Content="Help" Tag="HelpIcon"/>
                    </StackPanel>
                </StackPanel>

                <!-- Logout Button at the Bottom -->
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Logout" Tag="LogoutIcon" DockPanel.Dock="Bottom" Margin="15, 0, 0, 0"/>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Welcome Section -->
            <StackPanel Margin="0,10,0,0">
                <Border Width="575" Height="100" Background="#4143E3" CornerRadius="30">
                    
                </Border>
                <Grid Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Cards -->
                    <Border Grid.Column="0" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/light.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Tutorial" FontSize="18" FontWeight="Bold" Foreground="#F1C40F"/>
                            <TextBlock Text="Simplify your decisions through our Smart Menu Assistant who will help you." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/book.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Community" FontSize="18" FontWeight="Bold" Foreground="#2ECC71"/>
                            <TextBlock Text="Connect with others and share experiences through our community." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#EEEEEE" CornerRadius="10" Padding="10" Margin="10">
                        <StackPanel>
                            <Image Source="/icon/chatbot_menu.png" Width="40" Height="40" HorizontalAlignment="Left" Margin="-5, 0, 0, 5"/>
                            <TextBlock Text="Chatbot" FontSize="18" FontWeight="Bold" Foreground="#3498DB"/>
                            <TextBlock Text="If you already know what to order, this is the best choice." TextWrapping="Wrap" FontSize="12" Foreground="#7D7D7D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
